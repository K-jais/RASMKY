<%- include("partials/header")%>
  <style>
        * {
        box-sizing: border-box;
        }
        body{
            background:linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)),url('./Rasmky.png');
        background-repeat: no-repeat;
        background-size: cover;
        }
        .butt{
          background-color: #2196f3; 
          font-weight: 500;
          color: #FFF;
          width: 75px;
          height: 27px;
          font-size: 13px;
          margin: 0px 5px;
          border: 2px solid #2196f3;
          border-radius: 15px;
        }
        .butt:hover{
          background-color:#413e66;
          border: 2px solid #413e66;
        }
        .butt:focus{
            outline: none;
